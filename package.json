{
  "name": "boo-design",
  "private": true,
  "scripts": {
    "build": "turbo build --remote-only",
    "dev": "turbo dev --parallel",
    "dev:docs": "turbo dev --filter=docs",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@boo-design/eslint-config": "workspace:*",
    "@boo-design/typescript-config": "workspace:*",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "turbo": "^2.3.0",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@9.6.0",
  "engines": {
    "node": ">=18"
  }
}
